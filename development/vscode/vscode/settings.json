{
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[dockercompose]": {
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.quickSuggestions": {
      "comments": false,
      "other": true,
      "strings": true
    },
    "editor.tabSize": 2
  },
  "[ftl]": {
    "editor.defaultFormatter": "AntonLilleby.xp-freemarker-formatter"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[groovy]": {
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[python]": {
    " editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.pylance": "always",
    "source.organizeImports": "always",
    "source.sort.json": "always",
    "source.unusedImports": "always"
  },
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'Dank Mono', 'Hack Nerd Font Mono'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.overviewRulerBorder": false,
  "editor.quickSuggestions": {
    "comments": true,
    "other": true,
    "strings": true
  },
  "editor.scrollbar.vertical": "auto",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "gradle.java.home": "~/.sdkman/candidates/java/current",
  "http.systemCertificatesNode": true,
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "~/.sdkman/candidates/java/8.0.482-tem"
    },
    {
      "name": "JavaSE-17",
      "path": "~/.sdkman/candidates/java/17.0.18-tem"
    },
    {
      "name": "JavaSE-21",
      "path": "~/.sdkman/candidates/java/21.0.10-tem"
    },
    {
      "default": true,
      "name": "JavaSE-25",
      "path": "~/.sdkman/candidates/java/25.0.2-tem"
    }
  ],
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.debug.settings.onBuildFailureProceed": true,
  "java.import.gradle.home": "~/.sdkman/candidates/gradle/8.11.1",
  "java.jdt.ls.java.home": "${env:HOME}/.sdkman/candidates/java/current",
  // Testing
  "java.test.config": {
    "vmArgs": [
      "-ea",
      "-Xmx1G"
    ]
  },
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdownlint.config": {
    "MD033": false // Allow inline HTML
  },
  "maven.executable.path": "~/.sdkman/candidates/maven/3.9.9/bin/mvn",
  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "$HOME/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/java/21"
    }
  ],
  "prettier.endOfLine": "auto",
  "prettier.singleQuote": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "redhat.telemetry.enabled": true,
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "sonarlint.automaticAnalysis": false,
  "sonarlint.rules": {
    "secrets:S6702": {
      "level": "off"
    }
  },
  "terminal.integrated.automationProfile.linux": null,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "'Dank Mono', 'Hack Nerd Font Mono'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.persistentSessionScrollback": 10000,
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "toggle",
  "workbench.activityBar.location": "default",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.editor.showTabs": "multiple",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20
}