window:
  opacity: 0.7
  padding:
    x: 10
    y: 10

import:
  - ~/.config/alacritty/themes/challenger_deep.yml

font:
  bold:
    family: FantasqueSansMono NF
  italic:
    family: FantasqueSansMono NF
  normal:
    family: FantasqueSansMono NF
    style: Regular
  size: 10

cursor:
  style:
    shape: Beam
    blinking: Always

shell:
  program: /bin/zsh
colors:
  # Default colors
  primary:
    background: '#292C3E'
    foreground: '#EBEBEB'

  # Cursor colors
  cursor:
    text: '#FF261E'
    cursor: '#FF261E'

  # Normal colors
  normal:
    black: '#0d0d0d'
    red: '#FF301B'
    green: '#A0E521'
    yellow: '#FFC620'
    blue: '#1BA6FA'
    magenta: '#8763B8'
    cyan: '#21DEEF'
    white: '#EBEBEB'

  # Bright colors
  bright:
    black: '#6D7070'
    red: '#FF4352'
    green: '#B8E466'
    yellow: '#FFD750'
    blue: '#1BA6FA'
    magenta: '#A578EA'
    cyan: '#73FBF1'
    white: '#FEFEF8'
theme: Argonaut
