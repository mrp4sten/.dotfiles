{
  // Editor configs
  "security.workspace.trust.enabled": true,
  "editor.fontFamily": "'Hack Nerd Font Mono'",
  "editor.fontWeight": "normal",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "editor.mouseWheelZoom": true,
  "editor.formatOnSave": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "expand",
  "editor.linkedEditing": true,
  "editor.guides.bracketPairs": true,
  "editor.stickyScroll.enabled": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.vertical": "auto",
  // Workbench configs
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": "multiple",
  "workbench.tree.indent": 20,
  "workbench.activityBar.location": "default",
  "workbench.colorTheme": "Tokyo Night",
  "workbench.iconTheme": "mosmmy-icons-vscode",
  // Shell script
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  // Terminal configs
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionScrollback": 10000,
  "terminal.integrated.defaultProfile.linux": "zsh",
  // Prettier configs
  "prettier.endOfLine": "auto",
  "prettier.singleQuote": true,
  // Window
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "auto",
  // Javascript
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // Java
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.import.gradle.home": "$HOME/.sdkman/candidates/gradle/8.14.2/bin",
  "java.import.gradle.java.home": "$HOME/.sdkman/candidates/java/current/bin/java",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "$HOME/.sdkman/candidates/java/8.0.452-tem/bin/java"
    },
    {
      "name": "JavaSE-17",
      "path": "$HOME/.sdkman/candidates/java/17.0.15-tem/bin/java"
    },
    {
      "name": "JavaSE-21",
      "path": "$HOME/.sdkman/candidates/java/21.0.7-tem/bin/java"
    }
  ],
  "maven.executable.path": "$HOME/.sdkman/candidates/maven/3.9.8/bin/mvn",
  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "$HOME/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/java/21"
    }
  ],
  // Freemarker
  "[ftl]": {
    "editor.defaultFormatter": "AntonLilleby.xp-freemarker-formatter"
  },
  // JSON
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  // Markdown
  "markdownlint.config": {
    "MD033": false // Allow inline HTML
  },
  // SCSS
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // CSS
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // HTML
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
}