{
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[ftl]": {
    "editor.defaultFormatter": "AntonLilleby.xp-freemarker-formatter"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.pylance": "always",
    "source.organizeImports": "always",
    "source.sort.json": "always",
    "source.unusedImports": "always"
  },
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'Dank Mono', 'Hack Nerd Font Mono'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.overviewRulerBorder": false,
  "editor.quickSuggestions": {
    "comments": true,
    "other": true,
    "strings": true
  },
  "editor.scrollbar.vertical": "auto",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "~/.sdkman/candidates/java/8.0.422-tem"
    },
    {
      "name": "JavaSE-11",
      "path": "~/.sdkman/candidates/java/11.0.24-tem"
    },
    {
      "name": "JavaSE-17",
      "path": "~/.sdkman/candidates/java/17.0.12-tem"
    }
  ],
  "java.import.gradle.home": "~/.sdkman/candidates/gradle/8.11.1",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdownlint.config": {
    "MD033": false // Allow inline HTML
  },
  "maven.executable.path": "~/.sdkman/candidates/maven/3.9.9/bin/mvn",
  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "$HOME/.config/Code/User/globalStorage/pleiades.java-extension-pack-jdk/java/21"
    }
  ],
  "prettier.endOfLine": "auto",
  "prettier.singleQuote": true,
  "redhat.telemetry.enabled": true,
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "'Dank Mono', 'Hack Nerd Font Mono'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.persistentSessionScrollback": 10000,
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "toggle",
  "workbench.activityBar.location": "default",
  "workbench.colorTheme": "Dark+ Mono",
  "workbench.editor.showTabs": "multiple",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20
}